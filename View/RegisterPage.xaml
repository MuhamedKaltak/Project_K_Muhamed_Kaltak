<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Project_K.View.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fontAwesome="clr-namespace:Project_K.Utilities"
    Title="RegisterPage">

    <Grid>

        <VerticalStackLayout Margin="30" HorizontalOptions="Center">
            <Label
                FontSize="30"
                HorizontalOptions="Center"
                Text="Register a new account" />

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource RegisterLabelFontAwesomeIcon}" Text="{x:Static fontAwesome:FontAwesomeIcons.User}" />

                <Frame Style="{StaticResource RegisterFrame}">


                    <Entry Placeholder="Enter a username" Style="{StaticResource RegisterEntry}" />
                </Frame>
            </HorizontalStackLayout>

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource RegisterLabelFontAwesomeIcon}" Text="{x:Static fontAwesome:FontAwesomeIcons.Lock}" />

                <Frame Style="{StaticResource RegisterFrame}">


                    <Entry Placeholder="Enter a password" Style="{StaticResource RegisterEntry}" />
                </Frame>
            </HorizontalStackLayout>


        </VerticalStackLayout>

    </Grid>

</ContentPage>