<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Project_K.View.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fontAwesome="clr-namespace:Project_K.Utilities"
    xmlns:viewmodel="clr-namespace:Project_K.ViewModel"
    Title="RegisterPage"
    x:DataType="viewmodel:RegisterViewModel">

    <Grid RowDefinitions="*,Auto">

        <VerticalStackLayout
            Grid.Row="0"
            Margin="30"
            HorizontalOptions="Center">
            <Label
                FontSize="30"
                HorizontalOptions="Center"
                Text="Register a new account" />

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource Label_FontAwesomeIcon_Solid}" Text="{x:Static fontAwesome:FontAwesomeIcons.User}" />

                <Frame Style="{StaticResource Frame_General}">


                    <Entry Placeholder="Enter a username" Style="{StaticResource Entry_General}" />
                </Frame>
            </HorizontalStackLayout>

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource Label_FontAwesomeIcon_Solid}" Text="{x:Static fontAwesome:FontAwesomeIcons.Lock}" />

                <Frame Style="{StaticResource Frame_General}">


                    <Entry
                        IsPassword="True"
                        Placeholder="Enter a password"
                        Style="{StaticResource Entry_General}" />
                </Frame>
            </HorizontalStackLayout>

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource Label_FontAwesomeIcon_Solid}" Text="{x:Static fontAwesome:FontAwesomeIcons.Lock}" />

                <Frame Style="{StaticResource Frame_General}">


                    <Entry
                        IsPassword="True"
                        Placeholder="Confirm the password"
                        Style="{StaticResource Entry_General}" />
                </Frame>
            </HorizontalStackLayout>

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource Label_FontAwesomeIcon_Solid}" Text="{x:Static fontAwesome:FontAwesomeIcons.IdCard}" />

                <Frame Style="{StaticResource Frame_General}">


                    <Entry Placeholder="Enter your name" Style="{StaticResource Entry_General}" />
                </Frame>
            </HorizontalStackLayout>

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource Label_FontAwesomeIcon_Solid}" Text="{x:Static fontAwesome:FontAwesomeIcons.IdCard}" />

                <Frame Style="{StaticResource Frame_General}">


                    <Entry Placeholder="Enter your last name" Style="{StaticResource Entry_General}" />
                </Frame>
            </HorizontalStackLayout>

            <HorizontalStackLayout Style="{StaticResource RegisterHorizontalStack}">

                <Label Style="{StaticResource Label_FontAwesomeIcon_Solid}" Text="{x:Static fontAwesome:FontAwesomeIcons.Envelope}" />

                <Frame Style="{StaticResource Frame_General}">


                    <Entry Placeholder="Enter your email adress" Style="{StaticResource Entry_General}" />
                </Frame>
            </HorizontalStackLayout>




        </VerticalStackLayout>

        <HorizontalStackLayout
            Grid.Row="1"
            Margin="0,0,0,20"
            Style="{StaticResource RegisterHorizontalStack}">

            <Button
                Command="{Binding NavigateToLoginPageCommand}"
                Style="{StaticResource Button_General}"
                Text="Cancel" />
            <Button
                Margin="20,0,0,0"
                Style="{StaticResource Button_General}"
                Text="Register" />

        </HorizontalStackLayout>

    </Grid>

</ContentPage>